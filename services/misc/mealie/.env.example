# Mealie Environment Variables
# Please copy this file to .env and set the appropriate values
# execute: 'cp .env.example .env'

# Default docker settings
# Id and group for file permissions
PUID=1000
PGID=1000
# Timezone setting
TZ=Europe/Paris
# Docker volumes path
DOCKER_VOLUMES_PATH=/mnt/pool/docker/volumes

# App settings
ALLOW_SIGNUP=false
LOG_LEVEL=DEBUG
BASE_URL=https://mealie.yourdomain.com

# Database settings
DB_PASSWORD=mealie_db_password

# SMTP settings
SMTP_HOST=
SMTP_PORT=
SMTP_FROM_NAME=Mealie
# Options: 'TLS', 'SSL', 'NONE'
SMTP_AUTH_STRATEGY=
SMTP_FROM_EMAIL=
SMTP_USER=
SMTP_PASSWORD=